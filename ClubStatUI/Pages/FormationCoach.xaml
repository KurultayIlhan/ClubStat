                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>
                            <Label
                                BackgroundColor="white"
                                HeightRequest="50"
                                Text="{Binding PlayerId}" />
                            <Label Grid.Column="1" Text="{Binding Location}" />
                        </Grid>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>-->
            <!--  SHOW & UPDATE MOTIVATION  -->
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="1*" />
                    <ColumnDefinition Width="1*" />
                </Grid.ColumnDefinitions>

                <!-- First Grid -->
                <Grid Grid.Column="0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="40" />
                        <RowDefinition Height="38" />
                        <RowDefinition Height="38" />
                        <RowDefinition Height="auto" />
                    </Grid.RowDefinitions>
                    <Label Padding="5"
                           HeightRequest="40"
                           FontSize="20"
                           HorizontalTextAlignment="Center"
                           Text="{Binding SelectedPlayer.FullName, Mode=OneWay}"
                           TextColor="White" />
                    <Editor x:Name="PlayerAttitudeEditor"
                            Grid.Row="1"
                            BackgroundColor="White"
                            FontSize="12"
                            HeightRequest="35"
                            Placeholder="Attitude"
                            Text="{Binding PlayerGameMotivation.PlayerAttitude, Mode=TwoWay}"
                            TextColor="Black"
                            WidthRequest="150" />
                    <Editor x:Name="PlayerMotivationEditor"
                            Grid.Row="2"
                            BackgroundColor="White"
                            FontSize="12"
                            HeightRequest="35"
                            Placeholder="Motivation"
                            Text="{Binding PlayerGameMotivation.PlayerMotivation, Mode=TwoWay}"
                            TextColor="Black"
                            WidthRequest="150" />
                    <Button Grid.Row="3"
                            BackgroundColor="#2AF7B9"
                            Command="{Binding UpdatePlayerStatisticsCommand}"
                            IsEnabled="{Binding CanUpdatePlayer, Mode=OneWay}"
                            FontSize="15"
                            Text="Give Score" />
                </Grid>

                <!-- Second Grid -->
                <Grid Grid.Column="1"
                      MinimumHeightRequest="36">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="40" />
                        <RowDefinition Height="40" />
                        <RowDefinition Height="38" />
                        <RowDefinition Height="auto" />
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="auto" />
                    </Grid.ColumnDefinitions>
                    <Label FontSize="20"
                           Text="Record Action"
                           HorizontalTextAlignment="Center"
                           Padding="5"
                           HeightRequest="40"
                           TextColor="White" />
                    <Picker x:Name="pickPlayerActivity"
                            Grid.Row="1"
                            BackgroundColor="White"
                            ItemsSource="{x:StaticResource PlayerActivitiesArray}"
                            SelectedItem="{Binding SelectedActivity}"
                             HeightRequest="40"
                            TextColor="#001838"
                            Margin="5"

                            WidthRequest="150" />
                    <Button Grid.Row="3"
                            Margin="5,0,5,0"
                            Grid.Column="1"
                            BackgroundColor="#2AF7B9"
                            Command="{Binding UpdatePlayerActivityCommand}"
                            CommandParameter="{Binding SelectedItem, Source={x:Reference pickPlayerActivity}}"
                            FontSize="15"
                            Text="Give action" />
                </Grid>
            </Grid>

