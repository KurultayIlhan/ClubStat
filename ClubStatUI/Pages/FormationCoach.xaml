<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="ClubStatUI.Pages.FormationCoach"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:behavior="clr-namespace:ClubStatUI.Behavior"
    xmlns:model="clr-namespace:ClubStatUI.ViewModels"
    xmlns:poco="clr-namespace:ClubStat.Infrastructure.Models;assembly=ClubStat.Infrastructure"
    Title="FormationCoach"
    x:DataType="model:FormationCoachViewModel">
    <ContentPage.Resources>
        <ResourceDictionary>
            <behavior:PlayerImageLoaderBehavior x:Key="ImageLoaderBehavior" />
            <x:Array x:Key="FormationNames" Type="{x:Type x:String}">
                <x:String>4-2-3-1</x:String>
                <x:String>4-3-3</x:String>
                <x:String>4-4-2</x:String>
            </x:Array>
            <x:Array x:Key="PlayerActivitiesArray" Type="{x:Type poco:PlayerActivities}">
                <poco:PlayerActivities>None</poco:PlayerActivities>
                <poco:PlayerActivities>Assist</poco:PlayerActivities>
                <poco:PlayerActivities>Goal</poco:PlayerActivities>
                <poco:PlayerActivities>YellowCard</poco:PlayerActivities>
                <poco:PlayerActivities>RedCard</poco:PlayerActivities>
            </x:Array>
        </ResourceDictionary>
    </ContentPage.Resources>
